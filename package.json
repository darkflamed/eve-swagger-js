{
  "name": "eve-swagger",
  "version": "0.4.0-alpha",
  "description": "Promise-based, fluent API for EVE Online's ESI web interface",
  "license": "BSD-3-Clause",
  "author": "Michael Ludwig <lhkbob@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git://github.com/lhkbob/eve-swagger-js.git"
  },
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "prepublish": "npm-run-all build test",
    "test": "jest",
    "clean": "rm -rf ./dist; rm -rf ./node_modules/.jest-cache",
    "build": "npm-run-all build:util gen:esi build:src",
    "build:util": "tsc -t \"ESNext\" -p ./tsconfig.util.json",
    "build:src": "tsc -t \"ESNext\" -p ./tsconfig.src.json",
    "gen:esi": "node dist/util/type-generator",
    "watch": "npm-run-all --parallel watch:util watch:src",
    "watch:util": "tsc -t \"ESNext\" -w -p ./tsconfig.util.json",
    "watch:src": "tsc -t \"ESNext\" -w -p ./tsconfig.src.json",
    "gen:docs": "jsdoc --configure ./jsdoc.json"
  },
  "jest": {
    "roots": [
      "src",
      "gen"
    ],
    "testPathIgnorePatterns": [
      "node_modules/",
      "dist/",
      "util/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(tsx?)$",
    "testEnvironment": "node",
    "transform": {
      "^.+\\.tsx?$": "./node_modules/ts-jest/preprocessor.js"
    },
    "cacheDirectory": "./node_modules/.jest-cache"
  },
  "publishConfig": {
    "tag": "dev"
  },
  "dependencies": {
    "@types/verror": "^1.10.1",
    "@types/superagent": "^3.5.5",
    "bottleneck": "^1.16.0",
    "moment": "^2.18.1",
    "superagent": "^3.6.0",
    "verror": "^1.10.0"
  },
  "devDependencies": {
    "@types/deep-equal": "^1.0.1",
    "@types/jest": "^21.1.10",
    "@types/swagger-schema-official": "^2.0.6",
    "deep-equal": "^1.0.1",
    "jest": "^21.2.1",
    "npm-run-all": "^4.1.1",
    "pluralize": "^6.0.0",
    "sync-request": "^4.1.0",
    "ts-jest": "^21.2.4",
    "typescript": "^2.9.0-dev.20180424"
  }
}
