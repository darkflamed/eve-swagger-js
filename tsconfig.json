{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "alwaysStrict": false,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "noEmit": true,
    "outDir": "dist",
    "rootDir": "./"
  },
  "exclude": [
    "node_modules/",
    "**/*.spec.ts",
    "**/__mocks__/*.ts",
    "dist/"
  ]
}